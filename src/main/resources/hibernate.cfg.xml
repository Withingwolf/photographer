<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- mysql数据库驱动 -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <!-- mysql数据库名称 -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/photographer?useSSL=false&amp;serverTimezone=UTC
        </property>
        <!-- 数据库的登陆用户名 -->
        <property name="hibernate.connection.username">root</property>
        <!-- 数据库的登陆密码 -->
        <property name="hibernate.connection.password">asd6662580</property>
        <!-- 方言：为每一种数据库提供适配器，方便转换 -->
        <!--打印sql语句-->
        <property name="dialect">org.hibernate.dialect.MariaDB53Dialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hbm2ddl.auto">update</property>
        <property name="schemaUpdate">true</property>

        <property name="hibernate.current_session_context_class">thread</property>
        <mapping resource="hbm/User.hbm.xml"/>
    </session-factory>
</hibernate-configuration>